# --- CORE FLASK CONFIGURATION ---

# Set to "production" or "development"
FLASK_ENV=development
# Secret key used for session security and Flask-JWT-Extended signing
SECRET_KEY="YOUR_SUPER_SECRET_KEY_HERE_CHANGE_ME"

# --- JWT EXTENDED CONFIGURATION ---

# IMPORTANT: This must be a different, separate secret key
JWT_SECRET_KEY="YOUR_SECOND_SECRET_KEY_FOR_JWT_CHANGE_ME_TOO"
# The name of the cookie Flask-JWT-Extended sets for the access token
JWT_TOKEN_LOCATION="cookies"
JWT_COOKIE_SECURE=False  # Set to True in production with HTTPS
JWT_COOKIE_SAMESITE="Lax"
JWT_COOKIE_CSRF_PROTECT=True

# --- DATABASE CONFIGURATION ---

# Replace with your PostgreSQL connection string
# Format: postgresql://user:password@host:port/database_name
DATABASE_URL="postgresql://postgres:YOUR_DB_PASSWORD@localhost/real_estate_db"

# --- EXTERNAL API KEYS ---

# Google Maps API key (Required for index.html)
GOOGLE_MAPS_API_KEY="YOUR_GOOGLE_MAPS_API_KEY_HERE"

# Cloudinary credentials for image hosting (Required for property/agent routes)
CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name"
CLOUDINARY_API_KEY="your_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret"
